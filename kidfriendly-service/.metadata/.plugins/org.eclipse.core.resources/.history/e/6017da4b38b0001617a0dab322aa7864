var holic = angular.module('holic',['ui.bootstrap', 'ngResource', 'ngRoute', 'ngCookies', 'ui.router']);

holic.config(['$stateProvider', '$urlRouterProvider', '$routeProvider', function($stateProvider, $urlRouterProvider, $routeProvider) {
	 
	var urlUnidade = 'http://' + window.location.host + '/hlc';
	
	$stateProvider.state('/', {
	   url: '/',
	   templateUrl : 'pages/login/index.html',
	   controller     : 'loginController',
	});
	
   $urlRouterProvider.otherwise('/');
}]);